{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "body": [
    {
      "size": "Large",
      "text": "Webinare",
      "type": "TextBlock",
      "weight": "Bolder"
    },
    {
      "type": "TextBlock",
      "text": "Folgende Termine sind verfügbar"
    },
    {
      "choices": [
        {
          "title": "24.09.2020",
          "value": "Choice 1"
        },
        {
          "title": "01.10.2020",
          "value": "Choice 2"
        }
      ],
      "id": "1",
      "placeholder": "Termine",
      "type": "Input.ChoiceSet"
    }
  ],
  "type": "AdaptiveCard",
  "version": "1.2"
}
